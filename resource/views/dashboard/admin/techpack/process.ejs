<%- include('../../common/header') %>
  <%- include('../../common/side-bar') %>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
      <%- include('../../common/navbar') %>
        <div class="container-fluid py-4">

          <div class="row">
            <div class="col-xl-12 col-sm-8 mb-xl-0 mb-4">
              <div class="card">

                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                  <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Add Process</h6>
                  </div>
                </div>
                <div class="card-body px-3 pb-2">
                  <%- include('../../../errors/flash-message') %>
                    </form>
                    <form action="/techpack/process_first" method="POST">

                      <button type="submit" class="btn btn-sm btn-info" style="float: right;">Add</button>
                      <div class="row">
                        <div class="col-md-7">
                          <div class="input-group input-group-outline mb-3 is-filled ">
                            <input type="hidden" name="techpackId" value="<%=techpack.id%>">
                            <label class="form-label">Choose factory</label>
                            <select name="stockId" class="form-control">
                              <% supplierList.forEach((element)=> { %>
                                <option value="<%= element.id %>">
                                  [<%= element.type %>]<%= element.name %>
                                </option>
                                <% }) %>
                            </select>
                          </div>
                        </div>
                        <div class="col-md-2">
                          <div class="input-group input-group-outline mb-3 is-filled">
                            <label class="form-label">duedate</label>
                            <input type="date" class="form-control" name="duedate">
                          </div>
                        </div>
                        <div class="col-md-3">
                          <div class="input-group input-group-outline mb-3 is-filled">
                            <label class="form-label">note</label>
                            <input type="text" class="form-control" name="note">
                          </div>
                        </div>
                      </div>
                    </form>


                    <table id="tb_process" class="table align-items-center justify-content-center mb-0">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Factory</th>
                          <th>Duedate</th>
                          <th>Complete</th>
                          <th>Note</th>
                          <th>Status</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% processList.forEach((element)=> { %>
                          <tr>
                            <td>
                              <%= element.id %>
                            </td>
                            <td>
                              <%= element.stockprocess.name %>
                            </td>
                            <td class="duedate">
                              <%= element.duedate %>
                            </td>
                            <td class="completeddate">
                              <%= element.completeddate %>
                            </td>
                            <td>
                              <!-- Button trigger modal -->
                              <a type="button" class="note" data-bs-toggle="modal"
                                data-bs-target="#exampleModal" data-notex="<%= element.note %>"><i class="fa fa-ellipsis-h" aria-hidden="true"></i>
                            </a>
                            </td>
                            <td>
                              <span>
                                <% if (element.status==0) { %>
                                  Not started
                                  <% } else if (element.status==1) { %>
                                    Open
                                    <% } else if (element.status==2) { %>
                                      Processing
                                      <% } else if (element.status==3) { %>
                                        On hold
                                        <% } else if (element.status==4) { %>
                                          Completed
                                          <% } else if (element.status==5) { %>
                                            Cancelled
                                            <% } %>
                              </span>
                            </td>
                            <td style="display: flex;">
                              <form action="techpack/delete/<%= element.id %>" method="POST">
                                <button type="submit" class="btn btn-sm btn-danger"><i
                                    class="material-icons">close</i></button>
                              </form>
                            </td>
                          </tr>
                          <% }) %>
                      </tbody>
                    </table>
                </div>
              </div>
            </div>
          </div>
        </div>
    </main>
    
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title font-weight-normal" id="exampleModalLabel">Note</h5>
        <button type="button" class="btn-close text-dark" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
