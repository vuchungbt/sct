<%- include('../../common/header') %>
    <%- include('../../common/side-bar-stock') %>

        <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
            <%- include('../../common/navbar') %>
                <div class="container-fluid py-4">
                    <div class="row">
                        <div class="col-xl-12 col-sm-12 mb-xl-0 mb-4">
                            <div class="card">
                                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                                        <h6 class="text-white text-capitalize ps-3">Process</h6>
                                    </div>
                                </div>
                                <div class="card-body py-3 pb-2">
                                    <%- include('../../../errors/flash-message') %>
                                        <table id="tbcloth"
                                            class="table align-items-center justify-content-center mb-0">
                                            <thead>
                                                <tr>
                                                    <th
                                                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                        ID</th>
                                                    <th
                                                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                        Techpack</th>
                                                    <th
                                                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                                        DueDay
                                                    </th>
                                                    <th
                                                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                                        Work Type
                                                    </th>
                                                    <th
                                                        class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                        Status</th>
                                                    <th
                                                        class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                        Note</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <%process.reverse().forEach(element=> { %>
                                                    <tr>
                                                        <td>
                                                            <div class="mb-0 text-sm duedate"><!-- Button trigger modal -->
                                                                <a href="../stock/process/update/<%=element.id%>">
                                                                    <i class="fa fa-pencil-square-o"
                                                                        aria-hidden="true"></i></a>
                                                                <%=element.id%>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="d-flex px-2 py-1">
                                                                <!-- <div> <img src="/dashboard/img/small-logos/logo-xd.svg" class="avatar avatar-sm me-3" alt="xd">
                              </div> -->
                                                                <div class="d-flex flex-column justify-content-center">

                                                                    <h6 class="mb-0 text-sm">
                                                                        
                                                                        <a
                                                                            href="../stock/view/<%=element.techpackDetail.id%>">
                                                                            <%=element.techpackDetail.name%>
                                                                        </a>

                                                                    </h6>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="mb-0 text-sm duedate">
                                                                <%=element.duedate%>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="mb-0 text-sm duedate">
                                                                <%=element.Type.name%>
                                                            </div>
                                                        </td>
                                                        <td class="align-middle text-center text-sm">
                                                            <span class="text-xs font-weight-bold  <%=element.status==0 ?'text-danger':''%> ">
                                                                <% if (element.status==0) { %>
                                                                    Not started
                                                                    <% } else if (element.status==1) { %>
                                                                        Open
                                                                        <% } else if (element.status==2) { %>
                                                                            Processing
                                                                            <% } else if (element.status==3) { %>
                                                                                On hold
                                                                                <% } else if (element.status==4) { %>
                                                                                    Completed
                                                                                    <% } else if (element.status==5) {
                                                                                        %>
                                                                                        Cancelled
                                                                                        <% } %>
                                                            </span>
                                                        </td>
                                                        <td class="align-middle text-center text-sm">
                                                            <a type="button" class="note" data-bs-toggle="modal"
                                                                data-bs-target="#exampleModal"
                                                                data-notex="<%= element.note %>"><i
                                                                    class="fa fa-ellipsis-h" aria-hidden="true"></i>
                                                            </a>

                                                        </td>
                                                    </tr>
                                                    <% } )%>
                                            </tbody>
                                        </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </main>
        </script>
        <script>
            $("#tbcloth").DataTable(
                {
                    "order": [[0, 'desc']],
                }
            );
        </script>
        <!--https://datatables.net/forums/discussion/68595/remove-show-entries remove entities-->


        <%- include('../../common/footer') %>