<%- include('../../common/header') %> 
<%- include('../../common/side-bar-stock') %>

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <%- include('../../common/navbar') %>
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-xl-12 col-sm-12 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                  <h6 class="text-white text-capitalize ps-3">My store</h6>
                </div>
              </div>
            <div class="card-body py-3 pb-2">
                <%- include('../../../errors/flash-message')  %>
                <table id="tbsup" class="table align-items-center justify-content-center mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Tel</th>
                            <th>Address</th>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% supplierList.forEach((element,key) => { %>
                            <tr>
                                <td><%= element.id %></td>
                                <td><%= element.name %></td>
                                <td><%= element.tel %></td>
                                <td><%= element.address %></td>
                                <td><%= element.type %></td>
                                <td><%= element.description %></td>
                                <td style="display: flex;">
                                    <a href="../stock/edit_store/<%= element.id %>" class="btn btn-sm btn-warning">Edit</a>
                                   
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        </div>
        </div>
    </div>
</main>
</script>
<script >
   $("#tbsup").DataTable({
        "paging":   false,
        "info":     false
    });
</script>
