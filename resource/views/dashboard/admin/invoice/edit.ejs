<%- include('../../common/header') %>
  <%- include('../../common/side-bar') %>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
      <%- include('../../common/navbar') %>
        <div class="container-fluid py-4">
          <div class="row">
            <div class="col-xl-3 col-sm-3 mb-xl-0 mb-4">
            </div>

            <div class="col-xl-6 col-sm-6 mb-xl-0 mb-4">
              <div class="card">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                  <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Edit Invoice: <%= invoice.id %></h6>
                  </div>
                </div>
                <div class="card-body px-3 pb-2">
                  <form role="form" action="/invoice/update/<%= invoice.id %>" method="post" novalidate>
                      <div class="input-group input-group-outline mb-3 is-filled">
                        <label class="form-label">Choose factory</label>
                        <select name="toStockId" class="form-control">
                          <% supplierList.forEach((element) => { %>
                            <option value="<%= element.id %>">
                              <%= element.type %>-<%= element.name %>
                            </option>
                            <% }) %>
                        </select>
                      </div>
                      <div class="input-group input-group-outline mb-3 is-filled">
                        <label class="form-label">TypePayment</label>
                        <select name="typePayment" class="form-control">
                          <option <%= invoice.typePayment == "Cash"  ? 'selected' : '' %> value="Cash" >Cash</option>
                          <option <%= invoice.typePayment == 'Bank transfer'  ? 'selected' : '' %> value="Bank transfer">Bank transfer</option>
                          <option <%= invoice.typePayment == "Credits"  ? 'selected' : '' %> value="Credits">Credits</option>
                        </select>
                      </div>
                      <div class="input-group input-group-outline mb-3 is-filled">
                        <label class="form-label">Status</label>
                        <select name="status" class="form-control">
                          <option <%= invoice.status == "Prepairing"  ? 'selected' : '' %>  value="Prepairing">Prepairing</option>
                          <option <%= invoice.status == "A paft"  ? 'selected' : '' %>  value="A paft">A paft</option>
                          <option <%= invoice.status == "Done"  ? 'selected' : '' %>  value="Done">Done</option>
                        </select>
                      </div>
                      <div class="input-group input-group-outline mb-3 is-filled">
                        <label class="form-label">Total</label>
                        <input type="number" class="form-control" name="total" value="<%= invoice.total %>">
                      </div>
                      <div class="input-group input-group-outline mb-3 is-filled">
                        <label class="form-label">note</label>
                        <input type="text" class="form-control" name="note" value="<%= invoice.note %>" >
                      </div>
                      
                      <div class="text-center">
                        <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg mt-4 mb-0">Submit and add item</button>
                      </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
    </main>


    <%- include('../../common/footer') %>