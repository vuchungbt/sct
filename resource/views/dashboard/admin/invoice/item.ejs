<%- include('../../common/header') %>
<%- include('../../common/side-bar') %>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
      <%- include('../../common/navbar') %>
        <div class="container-fluid py-4">
          <div class="row">
            <div class="col-xl-3 col-sm-3 mb-xl-0 mb-4">
            </div>
            <div class="col-xl-6 col-sm-6 mb-xl-0 mb-4">
              <div class="card">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                  <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white ps-3">Add item to Invoice ID:<%= invoiceId %></h6> 

                  </div>
                </div>
                <div class="card-body px-3 pb-2">
                  <%- include('../../../errors/flash-message') %>
                    <form role="form" action="/invoice/item" method="post">
                      <div class="input-group input-group-outline mb-3 is-filled">
                        <input name="invoiceId" type="hidden" value="<%= invoiceId %>" />
                        <label class="form-label">Choose techpack</label>
                        <select name="techpackId" class="form-control">
                          <% techpackList.forEach((element) => { %>
                            <option value="<%= element.id %>">
                              <%= element.id %>-<%= element.name %>
                            </option>
                            <% }) %>
                        </select>
                      </div>
                      <div class="input-group input-group-outline mb-3 is-filled">
                        <label class="form-label">quantity</label>
                        <input type="number" class="form-control" name="quantity" required value="1">
                      </div>
                      <div class="input-group input-group-outline mb-3 is-filled">
                        <label class="form-label">Size</label>
                        <input type="text" class="form-control" name="type" required value="M:30, L:30" >
                      </div>
                      <div class="input-group input-group-outline mb-3 is-filled">
                        <label class="form-label">Price</label>
                        <input type="number" class="form-control" name="price" value="0" >
                      </div>
                      <div class="text-center" style="float: left;">
                        <button type="submit" class="btn btn-lg bg-gradient-info btn-lg mt-4 mb-0">More item >></button>
                      </div>
                      <div class="text-center" style="float: right;">
                        <a href="../invoice" class="btn btn-lg bg-gradient-success btn-lg mt-4 mb-0">Done</a>
                      </div>
                    </form>
                </div>
              </div>
            </div>
          </div>
        </div>
    </main>


    <%- include('../../common/footer') %>